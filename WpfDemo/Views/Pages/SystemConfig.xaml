<UserControl
    x:Class="WpfDemo.Views.Pages.SystemConfig"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfDemo.Views.Pages"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:WpfDemo.ViewModels.PageViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:SystemConfigViewModel}"
    mc:Ignorable="d">
    <Grid>
        <StackPanel VerticalAlignment="Top" Orientation="Vertical">
            <GroupBox
                Margin="0,10"
                materialDesign:ColorZoneAssist.Background="{DynamicResource MaterialDesign.Brush.Primary.Dark}"
                materialDesign:ColorZoneAssist.Foreground="{DynamicResource MaterialDesign.Brush.Primary.Dark.Foreground}"
                materialDesign:ColorZoneAssist.Mode="Custom"
                FontSize="18"
                Header="App.config"
                Style="{StaticResource MaterialDesignGroupBox}">
                <Grid Width="600">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="10,5"
                        IsEnabled="False"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding AppConfigRead}" />
                    <Button
                        Grid.Row="0"
                        Grid.Column="1"
                        Height="40"
                        Margin="10,5"
                        Command="{Binding ReadAppConfigCommand}"
                        CommandParameter="{Binding Text, ElementName=InputBox}"
                        Content="读取"
                        Style="{StaticResource MaterialDesignRaisedDarkButton}" />
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="10,5"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding AppConfigWrite}" />
                    <Button
                        Grid.Row="1"
                        Grid.Column="1"
                        Height="40"
                        Margin="10,5"
                        Command="{Binding WriteAppConfigCommand}"
                        CommandParameter="{Binding Text, ElementName=InputBox}"
                        Content="写入"
                        Style="{StaticResource MaterialDesignRaisedDarkButton}" />
                </Grid>
            </GroupBox>
            <GroupBox
                Margin="0,10"
                materialDesign:ColorZoneAssist.Background="{DynamicResource MaterialDesign.Brush.Primary.Dark}"
                materialDesign:ColorZoneAssist.Foreground="{DynamicResource MaterialDesign.Brush.Primary.Dark.Foreground}"
                materialDesign:ColorZoneAssist.Mode="Custom"
                FontSize="18"
                Header="Settings.settings"
                Style="{StaticResource MaterialDesignGroupBox}">
                <Grid Width="600">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="10,5"
                        IsEnabled="False"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding SettingConfigRead}" />
                    <Button
                        Grid.Row="0"
                        Grid.Column="1"
                        Height="40"
                        Margin="10,5"
                        Command="{Binding ReadSettingCommand}"
                        CommandParameter="{Binding Text, ElementName=InputBox}"
                        Content="读取"
                        Style="{StaticResource MaterialDesignRaisedDarkButton}" />
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="10,5"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding SettingConfigWrite}" />
                    <Button
                        Grid.Row="1"
                        Grid.Column="1"
                        Height="40"
                        Margin="10,5"
                        Command="{Binding WriteSettingCommand}"
                        CommandParameter="{Binding Text, ElementName=InputBox}"
                        Content="写入"
                        Style="{StaticResource MaterialDesignRaisedDarkButton}" />
                </Grid>
            </GroupBox>

        </StackPanel>
    </Grid>
</UserControl>
