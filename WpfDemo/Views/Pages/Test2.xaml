<UserControl
    x:Class="WpfDemo.Views.Pages.Test2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfDemo.Views.Pages"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:WpfDemo.ViewModels.PageViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:Test2ViewModel}"
    mc:Ignorable="d">
    <Grid Cursor="">
        <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
            <Border Padding="16">
                <TextBlock
                    Margin="0,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    AutomationProperties.Name="IndexLabel"
                    FontSize="22"
                    Text="Test2" />
            </Border>
            <Button
                Margin="0,10"
                Command="{Binding TestMethodCommand}"
                Content="测试" />
        </StackPanel>
    </Grid>
</UserControl>
