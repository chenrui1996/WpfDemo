<Window
    x:Class="WpfDemo.Views.CustomPages.CustomWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfDemo.Views.CustomPages"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CustomWindow"
    Width="900"
    Height="500"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="400" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>
            <Border
                Grid.Row="0"
                Margin="6"
                Padding="10"
                BorderBrush="Black"
                BorderThickness="0">
                <Frame x:Name="customFrame" />
            </Border>
            <StackPanel
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Margin="10,0"
                    Click="Button_Click_1"
                    Content="自定义页面1"
                    Style="{StaticResource MaterialDesignFlatDarkBgButton}" />
                <Button
                    Margin="10,0"
                    Click="Button_Click_2"
                    Content="自定义页面2"
                    Style="{StaticResource MaterialDesignFlatDarkBgButton}" />
                <Button
                    Width="120"
                    Margin="10,0"
                    Background="DarkRed"
                    Click="Button_Click_Clear"
                    Content="重置"
                    Style="{StaticResource MaterialDesignFlatDarkBgButton}" />
            </StackPanel>
        </Grid>

        <StackPanel Grid.Column="1" Margin="10,0">
            <GroupBox
                Height="450"
                materialDesign:ColorZoneAssist.Background="{DynamicResource MaterialDesign.Brush.Primary.Dark}"
                materialDesign:ColorZoneAssist.Foreground="{DynamicResource MaterialDesign.Brush.Primary.Dark.Foreground}"
                materialDesign:ColorZoneAssist.Mode="Custom"
                FontSize="18"
                Header="事件日志"
                Style="{StaticResource MaterialDesignGroupBox}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="40" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="1" Margin="3">
                        <Button
                            Width="200"
                            Click="ClearButton_Click"
                            Content="清空日志"
                            Style="{StaticResource MaterialDesignFlatDarkButton}" />
                    </StackPanel>
                    <ScrollViewer Grid.Row="0" Background="White">
                        <ListView x:Name="pageEventRecord" />
                    </ScrollViewer>
                </Grid>
            </GroupBox>
        </StackPanel>

    </Grid>
</Window>
