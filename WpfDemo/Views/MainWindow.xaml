<Window
    x:Class="WpfDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:customcontrollibrary="clr-namespace:WpfCustomControlLibrary;assembly=WpfCustomControlLibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfDemo"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:WpfDemo.Models"
    xmlns:viewmodels="clr-namespace:WpfDemo.ViewModels"
    Title="MainWindow"
    MinWidth="1200"
    MinHeight="700"
    d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
    Style="{StaticResource MaterialDesignWindow}"
    mc:Ignorable="d">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries />
        </ResourceDictionary>
    </Window.Resources>
    <!--  根节点  -->
    <materialDesign:DialogHost DialogTheme="Inherit" Identifier="RootDialog">
        <!--  抽屉菜单  -->
        <materialDesign:DrawerHost IsLeftDrawerOpen="{Binding ElementName=MenuToggleButton, Path=IsChecked}">
            <!--  左侧菜单  -->
            <materialDesign:DrawerHost.LeftDrawerContent>
                <DockPanel MinWidth="220">
                    <!--<materialDesign:TreeListView ItemsSource="{Binding MenuTree}" />-->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="70" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <materialDesign:ColorZone
                            Grid.Row="0"
                            Height="70"
                            Padding="16"
                            materialDesign:ElevationAssist.Elevation="Dp4"
                            DockPanel.Dock="Top"
                            Mode="PrimaryMid">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="60" />
                                </Grid.ColumnDefinitions>

                                <StackPanel
                                    Grid.Column="0"
                                    HorizontalAlignment="Center"
                                    Orientation="Horizontal">
                                    <materialDesign:PackIcon
                                        Width="30"
                                        Height="30"
                                        Margin="10,0,0,2"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Kind="TelevisionStop" />
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        AutomationProperties.Name="Material Design In XAML Toolkit"
                                        FontSize="22"
                                        Text="菜单" />

                                </StackPanel>
                                <ToggleButton
                                    Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    DockPanel.Dock="Top"
                                    IsChecked="{Binding ElementName=MenuToggleButton, Path=IsChecked, Mode=TwoWay}"
                                    Style="{StaticResource MaterialDesignHamburgerToggleButton}" />
                            </Grid>

                        </materialDesign:ColorZone>

                        <ScrollViewer
                            Grid.Row="1"
                            Padding="20"
                            VerticalAlignment="Top"
                            VerticalScrollBarVisibility="Auto">
                            <Border Padding="10,20">
                                <materialDesign:TreeListView
                                    MinWidth="220"
                                    ItemsSource="{Binding MenuTrees}"
                                    SelectedIndex="{Binding SelectedIndex}"
                                    SelectedItem="{Binding SelectedTreeItem}"
                                    SelectionChanged="TreeListView_SelectionChanged">
                                    <materialDesign:TreeListView.Resources>
                                        <!--  一级和二级，使用同一个类型  -->
                                        <HierarchicalDataTemplate DataType="{x:Type models:MenuTreeItem}" ItemsSource="{Binding Children}">
                                            <TextBlock
                                                Margin="3,2"
                                                FontSize="16"
                                                Text="{Binding Label}" />
                                        </HierarchicalDataTemplate>
                                        <!--  注意BasedOn="{StaticResource MaterialDesignTreeListViewItem}"，不写会覆盖样式  -->
                                        <Style BasedOn="{StaticResource MaterialDesignTreeListViewItem}" TargetType="materialDesign:TreeListViewItem">
                                            <Setter Property="Focusable" Value="{Binding Focusable}" />
                                            <Setter Property="DisableExpandOnDoubleClick" Value="True" />
                                        </Style>
                                    </materialDesign:TreeListView.Resources>
                                </materialDesign:TreeListView>

                            </Border>
                        </ScrollViewer>
                    </Grid>
                </DockPanel>
            </materialDesign:DrawerHost.LeftDrawerContent>
            <!--  内容  -->
            <DockPanel>
                <!--  header  -->
                <materialDesign:ColorZone
                    Height="70"
                    Padding="16"
                    materialDesign:ElevationAssist.Elevation="Dp4"
                    DockPanel.Dock="Top"
                    Mode="PrimaryMid">
                    <DockPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="60" />
                            </Grid.ColumnDefinitions>
                            <!--  icon  -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <ToggleButton
                                    x:Name="MenuToggleButton"
                                    AutomationProperties.Name="HamburgerToggleButton"
                                    IsChecked="False"
                                    Style="{StaticResource MaterialDesignHamburgerToggleButton}" />
                            </StackPanel>
                            <!--  标题  -->
                            <StackPanel
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="30"
                                    Height="30"
                                    Margin="10,0,0,2"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Kind="TelevisionStop" />
                                <TextBlock
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    AutomationProperties.Name="Material Design In XAML Toolkit"
                                    FontSize="22"
                                    Text="WPF Demo" />
                            </StackPanel>
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <materialDesign:PopupBox
                                    DockPanel.Dock="Right"
                                    PlacementMode="BottomAndAlignRightEdges"
                                    StaysOpen="False">
                                    <Grid Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <StackPanel
                                            Grid.Column="0"
                                            HorizontalAlignment="Center"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                Margin="10,0,10,0"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                AutomationProperties.Name="Light/Dark"
                                                FontSize="16"
                                                Text="Light/Dark" />
                                            <ToggleButton x:Name="DarkModeToggleButton" Click="MenuDarkModeButton_Click" />
                                        </StackPanel>
                                        <Separator Grid.Row="1" />
                                        <Button
                                            Grid.Row="2"
                                            Width="140"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Background="DarkRed"
                                            Click="MenuPopupButton_OnClick"
                                            Content="退出"
                                            Foreground="White"
                                            Style="{StaticResource MaterialDesignFlatLightBgButton}" />
                                    </Grid>

                                </materialDesign:PopupBox>
                            </StackPanel>
                        </Grid>

                    </DockPanel>
                </materialDesign:ColorZone>

                <!--  内容  -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Vertical">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <!--  面包屑导航  -->
                            <customcontrollibrary:Breadcrumb
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="20,0,0,0"
                                ItemsSource="{Binding Breadcrumb}"
                                Separator="&gt;" />
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button
                                    Margin="0,0,0,0"
                                    Command="{Binding MovePrevCommand}"
                                    Content="{materialDesign:PackIcon Kind=ArrowLeft,
                                                                      Size=24}"
                                    Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type FrameworkElement}}, Path=(TextElement.Foreground)}"
                                    Style="{StaticResource MaterialDesignToolButton}"
                                    ToolTip="后退" />

                                <Button
                                    Margin="0,0,0,0"
                                    Command="{Binding MoveNextCommand}"
                                    Content="{materialDesign:PackIcon Kind=ArrowRight,
                                                                      Size=24}"
                                    Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type FrameworkElement}}, Path=(TextElement.Foreground)}"
                                    Style="{StaticResource MaterialDesignToolButton}"
                                    ToolTip="前进" />

                                <Button
                                    Margin="10,0,10,0"
                                    Command="{Binding HomeCommand}"
                                    Content="{materialDesign:PackIcon Kind=Home,
                                                                      Size=24}"
                                    Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type FrameworkElement}}, Path=(TextElement.Foreground)}"
                                    Style="{StaticResource MaterialDesignToolButton}"
                                    ToolTip="首页" />
                            </StackPanel>
                        </Grid>

                        <Border
                            Grid.Row="0"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="0,0,0,1" />
                    </StackPanel>
                    <!--  用户页面  -->
                    <ScrollViewer
                        x:Name="MainScrollViewer"
                        Grid.Row="1"
                        Width="auto">
                        <ContentControl
                            Content="{Binding Content, UpdateSourceTrigger=PropertyChanged, FallbackValue={x:Null}}"
                            DataContext="{Binding SelectedTreeItem}"
                            DataContextChanged="OnSelectedItemChanged" />
                    </ScrollViewer>
                </Grid>




            </DockPanel>
        </materialDesign:DrawerHost>

    </materialDesign:DialogHost>


</Window>
